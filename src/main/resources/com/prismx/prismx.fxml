<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="790.0" prefWidth="1400.0" stylesheets="@../CSS/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prismx.controller.Controller">
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="header-container">
                    <children>
                        <StackPane fx:id="logo" prefHeight="50.0" prefWidth="50.0">
                            <children>
                                <Label text="&gt;_" />
                            </children>
                        </StackPane>

                        <Label text="PRISM COMPILER">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <Region HBox.hgrow="ALWAYS" />

                        <HBox alignment="CENTER_RIGHT" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" text="History" />
                                <Button mnemonicParsing="false" text="Dark Mode/Light Mode" />
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <HBox spacing="30.0" VBox.vgrow="ALWAYS">
                    <children>

                        <VBox prefWidth="550.0" spacing="10.0" styleClass="editor-panel" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="&lt;/&gt; Source Code">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <TextArea fx:id="sourceCodeArea" promptText="Your code will appear here..." VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>

                        <VBox prefWidth="550.0" spacing="10.0" styleClass="editor-panel" HBox.hgrow="ALWAYS">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Analysis Result">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>

                                <TextArea fx:id="resultArea" promptText="Analysis results will appear here..." VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <VBox styleClass="footer-panel">
                    <children>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Circle fx:id="statusLoaded" fill="GREY" radius="5.0" />
                                    <Label text="File Loaded" textFill="LIGHTGRAY" />
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Circle fx:id="statusLexical" fill="GREY" radius="5.0" />
                                    <Label text="Lexical" textFill="LIGHTGRAY" />
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Circle fx:id="statusSyntax" fill="GREY" radius="5.0" />
                                    <Label text="Syntax" textFill="LIGHTGRAY" />
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Circle fx:id="statusSemantic" fill="GREY" radius="5.0" />
                                    <Label text="Semantic" textFill="LIGHTGRAY" />
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" top="5.0" />
                            </padding>
                        </HBox>

                        <HBox alignment="CENTER" spacing="40.0">
                            <children>
                                <Button fx:id="btnOpenFile" onAction="#btnOpenFileAction" styleClass="primary-button" text="Open File" />

                                <Button fx:id="btnLexical" onAction="#btnLexicalAction" styleClass="action-button" text="Lexical" />

                                <Button fx:id="btnSyntax" onAction="#btnSyntaxAction" styleClass="action-button" text="Syntax" />

                                <Button fx:id="btnSemantic" onAction="#btnSemanticAction" styleClass="action-button" text="Semantic" />

                                <Button fx:id="btnClear" onAction="#btnClearAction" styleClass="danger-button" text="Clear" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" top="10.0" />
                    </padding>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
